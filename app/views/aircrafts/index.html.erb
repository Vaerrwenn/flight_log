<div class="container">
    <div class="row">
        <div class="col-12">
            <%= link_to  "Add Data", new_aircraft_path, class: "btn btn-primary"  %>
        </div>
    </div>
    <div class="d-flex flex-column bd-highlight mt-3">
        <% @aircrafts.each do |a| %>
            <div class="flex-content p-2">
                <div class="name">
                    <%= link_to aircraft_path(a) do %>
                        <b><%= a.registration %></b>
                    <% end %>
                </div>
                <span class="edit">
                    <%= link_to "Edit", edit_aircraft_path(a)%> | 
                </span>
                <span class="delete">
                    <%= link_to  "Delete", aircraft_path(a),
                        method: :delete,
                        data: { confirm: "Are you sure you'd like to delete " + a.registration + "'s data?"} %>
                </span>
            </div>
        <% end %>
    </div>
</div>