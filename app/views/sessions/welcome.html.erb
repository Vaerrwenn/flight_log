<div class="container">
    <% flash.each do |type, msg| %>
        <div class="alert alert-dismissible alert-<%= type %>">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <span><%= msg %></span>
        </div>
    <% end %>
    <div class="row">
        <h3>To continue, please do the following first:</h3>
    </div>
    <div class="row">
        <%= button_to  "Login", login_path, class: "btn btn-primary mr-2", method: :get %>
        <%= button_to  "Register", new_user_path, class: "btn btn-primary", method: :get %>
    </div>
</div>