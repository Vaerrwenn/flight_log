<div class="container">
    <% flash.each do |type, msg| %>
        <div class="alert alert-dismissible alert-<%= type %>">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <span><%= msg %></span>
        </div>
    <% end %>
    <div class="row">
        <div class="col-12"><h4>Add new flight data</h4><hr></div>
    </div>
    <div class="row">
        <%= render  "form" %>
    </div>
</div> 